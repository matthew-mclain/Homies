<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDisplayNameSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:textColor="@color/grey"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textViewMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDisplayNameSent"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:background="@drawable/chat_bubble_sent"
        android:gravity="center"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textViewTimestampSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMessageSent"
        android:textAppearance="?attr/textAppearanceCaption"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        android:textColor="@color/grey"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
